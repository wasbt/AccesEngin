<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <!-- 
    ALL
    DEBUG
    INFO
    WARN
    ERROR
    FATAL
    OFF
-->
  <root>
    <level value="ALL"/>
    <appender-ref ref="SmtpAppender" />
    <appender-ref ref="FileAppender" />
  </root>

  <logger name="SmtpAppender">
    <level value="ALL"/>
    <appender-ref ref="SmtpAppender" />
  </logger>

  <logger name="FileAppender">
    <level value="ALL"/>
    <appender-ref ref="FileAppender" />
  </logger>

  <appender name="FileAppender" type="log4net.Appender.RollingFileAppender" >
    <file type="log4net.Util.PatternString" value="C:\Log\Front\%date{yyyy-MM-dd}\WEB_%date{yyyyMMdd}.xml" />
    <param name="AppendToFile" value="true" />
    <!-- Indique si le fichier sera écrasé (false) ou si  les logs seront écrits à la suite (true).-->
    <rollingStyle value="Size" />
    <!-- Définit le critère suivant lequel sera renommé le fichier. -->
    <maxSizeRollBackups value="2" />
    <!-- La taille max par journée ne doit pas déppasser 10M+1. -->
    <maximumFileSize value="10MB" />
    <!-- Taille max par fichier 1M. -->

    <layout type="log4net.Layout.XmlLayoutSchemaLog4j">
      <locationInfo value="true" />
    </layout>
  </appender>

  <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
    <to value="elmehdielmellali.mobile@gmail.com" />
    <from value="elmehdielmellali.mobile@gmail.com" />
    <subject type="log4net.Util.PatternString" value="[ERREUR: OCP ACCES ENGIN]" />

    <EnableSsl value="true" />
    <smtpHost value="smtp.gmail.com" />
    <port value="587"/>
    <userName value="elmehdielmellali.mobile@gmail.com" />
    <password value="A1Z2E3R4" />



    <bufferSize value="0" />
    <lossy value="true" />
    <evaluator type="log4net.Core.LevelEvaluator">
      <threshold value="ERROR"/>
    </evaluator>

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="Date: %date%newlineLevel :: %level%newlineLogger: %logger %newlineMessage: %message%newline" />
    </layout>
  </appender>

</log4net>