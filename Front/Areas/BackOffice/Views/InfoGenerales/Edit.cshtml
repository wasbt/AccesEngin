@model DATAAL.REF_InfoGenerale

@{
                /**/

                ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h2 class="header">Mise à jour de rubrique info générale #@Model.Id</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.InfoGeneralRubriqueId, "InfoGeneralRubriqueId", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("InfoGeneralRubriqueId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.InfoGeneralRubriqueId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.InfoGeneralRubriqueId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.ListBox("TypeCheckListIds", null, htmlAttributes: new { @class = "form-control select2", multiple = "multiple", style = "width:auto;" })
                            @Html.ValidationMessageFor(model => model.InfoGeneralRubriqueId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success waves-effect w-md waves-light m-b-5"> Mettre à jour</button>
                        </div>
                    </div>
                </div>
            }

            @Html.Partial("_BackToList")
        </div>
    </div>
</div>
@section Scripts {

    <script>
         jQuery(document).ready(function() {
                        $(".select2").select2();
            });
    </script>
}
