            </ListView.Behaviors>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding TypeCheckListName}"
                              StyleId="disclosure"
                              Detail="{Binding TypeEnginName}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
