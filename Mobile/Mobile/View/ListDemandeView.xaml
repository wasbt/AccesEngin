             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:vm="clr-namespace:Mobile.ViewModel"
             xmlns:behaviors="clr-namespace:Mobile.Behaviors"
             x:Class="Mobile.View.ListDemandeView">

    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:DemandeAccesVM x:Key="vm"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <!--<ListView ItemsSource="{Binding Source={StaticResource vm}, Path=DemandeAcces}">
            <ListView.Behaviors>
