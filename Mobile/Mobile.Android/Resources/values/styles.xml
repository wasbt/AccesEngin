<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#FFFFFF</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#1976D2</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#FFFFFF</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>
    <item name="android:windowLightStatusBar">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

    <!--to remove listview pressed orange color-->
    <item name="android:colorPressedHighlight">@color/ColorTransparent</item>
    <item name="android:colorLongPressedHighlight">@color/ColorTransparent</item>
    <item name="android:colorFocusedHighlight">@color/ColorTransparent</item>
    <item name="android:colorActivatedHighlight">@color/ColorTransparent</item>
    <!--to remove listview pressed orange color-->
    <item name="android:windowNoTitle">false</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FFFFFF</item>
    <item name="android:windowLightStatusBar">true</item>

  </style>
  <style name="splashscreen" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--background splash image-->
    <item name="android:windowBackground">@drawable/splash_background</item>
    <!--status bar color-->
    <item name="android:windowLightStatusBar">true</item>
    <!--no title bar-->
    <item name="android:windowNoTitle">true</item>
    <!--fullscreen -->
    <item name="android:windowFullscreen">true</item>
    <!--no translucense-->
    <item name="android:windowIsTranslucent">false</item>
    <!--no floating-->
    <item name="android:windowIsFloating">false</item>
    <!--background dim enable-->
    <item name="android:backgroundDimEnabled">true</item>
  </style>
</resources>
